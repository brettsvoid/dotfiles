[user]
    name = Brett Henderson
    email = bretth@m2north.com

[color]
    ui = always

[push]
    default = current

[core]
    editor = nano
    excludesfile =  ~/.gitignore_global
    attributesfile = ~/.gitattributes

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    log = true

[alias]
    tree = log --graph --decorate --pretty=oneline --abbrev-commit
